<p>
  <% if flash[:error].present? %>
    <%= flash[:error] %>
  <% end %>
</p>

<p>
<h1>Payroll CSV File Upload</h1>
  <%= form_tag({:action => 'csv_upload'}, :multipart => true) do %>
    <p><label for="upload_file">Select File</label>
    <%= file_field_tag 'csv_file' %></p>
    <%= submit_tag "Upload" %>
  <% end %>
</p>
<p><%= link_to "Click here to view Payroll report", payroll_reports_url %></p>
